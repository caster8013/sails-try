<% block('localScripts', '<script src="/js/validate/customed.js"></script>') %>
<% block('localScripts', '<script src="/js/validate/parsley.v2.8.1.min.js"></script>') %>
<% block('localStyles', '<link rel="stylesheet" href="/styles/local/customed.css">') %>

<form action="/user/create" id="parsley" method="POST" class="form-signin">

  <% if(flash && flash.err) { %> 
    <ul class = "alert alert-success">
    <% Object.keys(flash.err).forEach(function(key) { %> 
    <li>
    <%= JSON.stringify(flash.err[key]) %> 
    </li>
    <% }) %> 
    </ul>
  <% } %>

  <div class="row form-group">
    <div class="col-md-6 col-sm-6 col-xs-6">
      <label for="name">Name</label>
      <input type="text" class="form-control stored" id="name" name="name" placeholder="name" required="true" data-parsley-length="[4, 20]">
    </div>
    <div class="col-md-6 col-sm-6 col-xs-6">
      <label for="title">title</label>
      <input type="text" class="form-control stored" id="title" name="title" placeholder="title">
    </div>
  </div>

  <div class="form-group">
    <label for="email">Email address</label>
    <input type="email" class="form-control stored" id="email" name="email" placeholder="Email" required>
  </div>
  <div class="form-group">
    <label for="pwd">Password</label>
    <input type="password" class="form-control stored" data-parsley-length="[6, 32]" id="password" name="password" placeholder="Password">
  </div>
  <div class="form-group">
    <label for="confirmation">Confirmation</label>
    <input type="password" class="form-control stored" data-parsley-length="[6, 32]" data-parsley-equalto="#password" id="confirmation" name="confirmation" placeholder="Confirmation">
  </div>
  
  <button type="submit" class="btn btn-primary" id="submit">Submit</button>
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>