<form action="/user/update/<%= user.id %>" method="post" class="form-signin">
    <div class="alert alert-warning" role="alert">You're editing a user!</div>

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" value="<%= user.name %>" class="form-control" />
    </div>
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= user.title %>" class="form-control" />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" value="<%= user.email %>" class="form-control" />
    </div>
    <% if(session.authenticated && session.User.admin) { %> 
        <% if(user.admin) {%> 
        <input type="hidden" name="admin" value="unchecked">
        <label for="" class="checkbox">
            <input type="checkbox" name="admin" checked> Admin</input>
        </label>
        <% } else { %> 
        <input type="hidden" name="admin" value="unchecked">
        <label for="" class="checkbox">
            <input type="checkbox" name="admin"> Admin</input>
        </label>
        <% } %> 
    <% } %> 
    <div class="form-group">
        <input type="submit" value="Proceed" class="btn btn-lg btn-primary" />
    </div>
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>
 